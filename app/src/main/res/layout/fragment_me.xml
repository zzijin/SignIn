<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="5dp"
         android:layout_marginTop="5dp"
         android:gravity="center"
         android:text="我的"
         android:textSize="23dp" />
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#8a8a8a"
         >
         <ImageView
             android:id="@+id/login"
             android:layout_width="140dp"
             android:layout_height="140dp"
             android:src="@mipmap/login_btn"
             android:layout_centerHorizontal="true"/>

         <ImageView
             android:id="@+id/coupon"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@mipmap/me_tz"
             android:layout_below="@id/login"
             android:layout_marginLeft="40dp"/>

         <ImageView
             android:id="@+id/discount"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@mipmap/me_hd"
             android:layout_below="@id/login"
             android:layout_centerHorizontal="true"/>

         <ImageView
             android:id="@+id/cart"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@mipmap/me_db"
             android:layout_below="@id/login"
             android:layout_alignParentRight="true"
             android:layout_marginRight="40dp"/>


         <TextView
             android:id="@+id/coupon_txt"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:text="通知"
             android:layout_below="@id/coupon"
             android:layout_marginLeft="45dp"
             android:textColor="#ffffff"/>

         <TextView
             android:id="@+id/discount_txt"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:text="活动"
             android:layout_below="@id/discount"
             android:layout_centerHorizontal="true"
             android:textColor="#ffffff"/>

         <TextView
             android:id="@+id/cart_txt"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:text="待办"
             android:layout_below="@id/cart"
             android:layout_alignParentRight="true"
             android:layout_marginRight="45dp"
             android:textColor="#ffffff"/>


     </RelativeLayout>
     <ListView
         android:id="@+id/me_listview"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:divider="@null"
         ></ListView>
 </LinearLayout>
</FrameLayout>